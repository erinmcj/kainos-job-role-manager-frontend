{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "typeRoots": ["./src/types", "./node_modules/@types"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "./node_modules/**/*",
        "./dist/**/*"
    ]
}